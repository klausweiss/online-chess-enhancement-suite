{
	"name": "Online Chess Enhancement Suite",
	"version": "0.0.0",
	"description": "Online Chess Enhancement Suite",
	"homepage_url": "https://github.com/klausweiss/online-chess-enhancement-suite",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"applications": {
		"gecko": {
			"id": "online-chess-enhancement-suite@notlmn.github.io",
			"strict_min_version": "67.0"
		}
	},
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"storage"
	],
	"options_ui": {
		"chrome_style": true,
		"page": "options.html"
	},
	"content_scripts": [
		{
			"matches": ["*://lichess.org/*"],
			"js": ["keyboard-control.js"],
			"run_at": "document_start"
		}
	]
}
